{
  "name": "microservices-architecture-nestjs",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:infra": "docker-compose up -d && docker ps",
    "stop:infra": "docker-compose down && docker ps",
    "container:postgres:monolith": "docker exec -it spotify-monolith-db psql -U spotify-monolith",
    "start:spotify-monolith": "npx nest start -w spotify-monolith",
    "start:music-library": "npx nest start -w music-library-ms",
    "start:discovery": "npx nest start -w music-discovery-ms",
    "start:accounts": "npx nest start -w accounts-ms",
    "start:mobile-bff": "npx nest start -w mobile-bff",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "e2e:monolith": "jest --config ./apps/spotify-monolith/test/jest-e2e.json",
    "start:infra:music-library-test": "cd apps/music-library-ms/test/infrastructure && docker-compose up -d && docker ps",
    "stop:infra:music-library-test": "cd apps/music-library-ms/test/infrastructure && docker-compose down && docker ps",
    "e2e:music-library-ms:dev": "env MUSIC_LIBRARY_MS_DATABASE_HOST=localhost MUSIC_LIBRARY_MS_DATABASE_PORT=5555 MUSIC_LIBRARY_MS_DATABASE_NAME=test MUSIC_LIBRARY_MS_DATABASE_USER=test MUSIC_LIBRARY_MS_DATABASE_PASS=test jest --config ./apps/music-library-ms/test/jest-e2e.json --maxWorkers 1",
    "e2e:music-library-ms": "npm run start:infra:music-library-test && env MUSIC_LIBRARY_MS_DATABASE_HOST=localhost MUSIC_LIBRARY_MS_DATABASE_PORT=5555 MUSIC_LIBRARY_MS_DATABASE_NAME=test MUSIC_LIBRARY_MS_DATABASE_USER=test MUSIC_LIBRARY_MS_DATABASE_PASS=test jest --config ./apps/music-library-ms/test/jest-e2e.json --maxWorkers 1 && npm run stop:infra:music-library-test",
    "e2e:mobile-bff": "env jest --config ./apps/mobile-bff/test/jest-e2e.json --maxWorkers 1",
    "e2e:music-discovery": "env MUSIC_DISCOVERY_MS_DATABASE_HOST=localhost MUSIC_DISCOVERY_MS_DATABASE_NAME=test MUSIC_DISCOVERY_MS_DATABASE_PORT=27020 MUSIC_DISCOVERY_MS_DATABASE_USER=test MUSIC_DISCOVERY_MS_DATABASE_PASS=test jest --detectOpenHandles --config ./apps/music-discovery-ms/test/jest-e2e.json --maxWorkers 1 ",
    "start:e2e-infra": "cd infrastructure/test && docker-compose up -d && docker ps",
    "stop:e2e-infra": "cd infrastructure/test && docker-compose down && docker ps"

  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@nestjs/apollo": "^12.0.9",
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^2.0.2",
    "@nestjs/graphql": "^12.0.9",
    "@nestjs/microservices": "^10.2.7",
    "@nestjs/mongoose": "^10.0.2",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.12",
    "@nestjs/typeorm": "^10.0.0",
    "@opentelemetry/context-async-hooks": "^1.15.2",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.41.2",
    "@opentelemetry/exporter-trace-otlp-http": "^0.41.2",
    "@opentelemetry/instrumentation-amqplib": "^0.33.2",
    "@opentelemetry/instrumentation-express": "^0.33.1",
    "@opentelemetry/instrumentation-http": "^0.43.0",
    "@opentelemetry/instrumentation-pg": "^0.36.2",
    "@opentelemetry/instrumentation-pino": "^0.34.1",
    "@opentelemetry/resources": "^1.15.2",
    "@opentelemetry/sdk-metrics": "^1.15.2",
    "@opentelemetry/sdk-node": "^0.41.2",
    "@opentelemetry/sdk-trace-node": "^1.15.2",
    "@opentelemetry/semantic-conventions": "^1.15.2",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "axios": "^1.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "graphql": "^16.8.1",
    "mongoose": "^8.0.1",
    "nest-winston": "^1.9.4",
    "nestjs-otel": "^5.1.5",
    "nestjs-pino": "^3.4.0",
    "pg": "^8.11.3",
    "pino-http": "^8.4.0",
    "pino-pretty": "^10.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "^@lib/shared(|/.*)$": "<rootDir>/libs/shared/src/$1",
      "^@app/rabbitmq-queue(|/.*)$": "<rootDir>/libs/rabbitmq-queue/src/$1",
      "^@lib/music-library-api(|/.*)$": "<rootDir>/libs/music-library-api/src/$1",
      "^@lib/utils(|/.*)$": "<rootDir>/libs/utils/src/$1"
    }
  }
}
